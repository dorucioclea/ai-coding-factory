# Application
NEXT_PUBLIC_APP_NAME=ProjectName
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api
API_URL=http://localhost:5000/api

# Authentication
# JWT secret must match the backend's JWT:Secret configuration
JWT_SECRET=your-256-bit-secret-key-here-min-32-chars
NEXT_PUBLIC_AUTH_COOKIE_NAME=auth-token
NEXT_PUBLIC_REFRESH_COOKIE_NAME=refresh-token

# Feature Flags
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_I18N=true
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Development
NODE_ENV=development

# Optional: Analytics
# NEXT_PUBLIC_ANALYTICS_ID=

# Optional: Sentry for error tracking
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_AUTH_TOKEN=
