{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore": "Warning"
        }
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.Hosting.Lifetime": "Information",
                "Microsoft.EntityFrameworkCore": "Warning"
            }
        }
    },
    "ConnectionStrings": {
        "DefaultConnection": "Host=localhost;Database=VlogForge;Username=postgres;Password=",
        "Redis": "localhost:6379"
    },
    "Jwt": {
        "Secret": "",
        "Issuer": "VlogForge",
        "Audience": "VlogForge",
        "ExpiryMinutes": 60
    },
    "Cors": {
        "AllowedOrigins": [
            "http://localhost:3000",
            "https://localhost:3000"
        ]
    },
    "AllowedHosts": "*"
}
