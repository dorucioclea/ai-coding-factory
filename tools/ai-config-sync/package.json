{
  "name": "ai-config-sync",
  "version": "1.0.0",
  "description": "CLI tool to synchronize AI coding assistant configurations across Claude, OpenCode, Cursor, Codex, and Windsurf",
  "main": "dist/index.js",
  "bin": {
    "ai-config-sync": "./dist/index.js",
    "acs": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "claude",
    "cursor",
    "codex",
    "windsurf",
    "opencode",
    "config",
    "sync"
  ],
  "author": "AI Coding Factory",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "glob": "^11.0.0",
    "js-yaml": "^4.1.0",
    "ora": "^8.1.1",
    "table": "^6.8.2",
    "toml": "^3.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.7",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
