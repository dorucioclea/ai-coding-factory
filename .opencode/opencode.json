{
  "$schema": "https://opencode.ai/config.json",
  "model": "local-inference/GLM-4.7",
  "small_model": "local-inference/GLM-4.7",
  "provider": {
    "local-inference": {
      "options": {
        "apiKey": "local-inference-key",
        "baseURL": "http://localhost:8000/v1",
        "timeout": 120000
      }
    }
  },
  "permission": {
    "bash": {
      "git *": "allow",
      "dotnet *": "allow",
      "docker *": "ask",
      "rg *": "allow",
      "find *": "allow",
      "sed *": "allow",
      "mkdir *": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "npm *": "allow",
      "node *": "allow",
      "bun *": "allow",
      "cd *": "allow",
      "pwd": "allow",
      "echo *": "allow"
    },
    "edit": "ask",
    "write": "ask"
  },
  "agent": {
    "ideation": {
      "instructions": "agent/ideation-agent.md"
    },
    "prototype": {
      "instructions": "agent/prototype-agent.md"
    },
    "poc": {
      "instructions": "agent/poc-agent.md"
    },
    "pilot": {
      "instructions": "agent/pilot-agent.md"
    },
    "product": {
      "instructions": "agent/product-agent.md"
    },
    "product-owner": {
      "instructions": "agent/product-owner-agent.md"
    },
    "scrum-master": {
      "instructions": "agent/scrum-master-agent.md"
    },
    "developer": {
      "instructions": "agent/developer-agent.md"
    },
    "qa": {
      "instructions": "agent/qa-agent.md"
    },
    "security": {
      "instructions": "agent/security-agent.md"
    },
    "devops": {
      "instructions": "agent/devops-agent.md"
    },
    "architect": {
      "instructions": "../.claude/agents/architect.md",
      "description": "System design and architecture decisions"
    },
    "code-reviewer": {
      "instructions": "../.claude/agents/code-reviewer.md",
      "description": "Code quality and review specialist"
    },
    "tdd-guide": {
      "instructions": "../.claude/agents/tdd-guide.md",
      "description": "Test-driven development methodology"
    },
    "build-error-resolver": {
      "instructions": "../.claude/agents/build-error-resolver.md",
      "description": "Fix build errors and compilation issues"
    },
    "e2e-runner": {
      "instructions": "../.claude/agents/e2e-runner.md",
      "description": "Playwright E2E testing execution"
    },
    "refactor-cleaner": {
      "instructions": "../.claude/agents/refactor-cleaner.md",
      "description": "Dead code cleanup and refactoring"
    },
    "doc-updater": {
      "instructions": "../.claude/agents/doc-updater.md",
      "description": "Documentation synchronization"
    },
    "security-reviewer": {
      "instructions": "../.claude/agents/security-reviewer.md",
      "description": "Vulnerability and security analysis"
    },
    "planner": {
      "instructions": "../.claude/agents/planner.md",
      "description": "Feature implementation planning"
    }
  },
  "plugin": [
    "plugin/ci-cd-orchestrator.ts",
    "plugin/dependency-check.ts",
    "plugin/sonarqube-integration.ts"
  ],
  "instructions": [
    "prompts/common-instructions.txt",
    "skill/net-agile/SKILL.md",
    "skill/net-scrum/SKILL.md",
    "skill/net-testing/SKILL.md",
    "skill/net-docker/SKILL.md",
    "skill/net-github-actions/SKILL.md",
    "skill/net-kubernetes/SKILL.md",
    "skill/net-web-api/SKILL.md",
    "skill/net-jwt-auth/SKILL.md",
    "skill/net-repository-pattern/SKILL.md",
    "skill/net-domain-model/SKILL.md",
    "skill/net-cqrs/SKILL.md",
    "skill/net-observability/SKILL.md",
    "../.claude/skills/backend-patterns/SKILL.md",
    "../.claude/skills/coding-standards/SKILL.md",
    "../.claude/skills/tdd-workflow/SKILL.md",
    "../.claude/skills/verification-loop/SKILL.md",
    "../.claude/skills/continuous-learning/SKILL.md",
    "../.claude/skills/strategic-compact/SKILL.md",
    "../.claude/skills/security-review/SKILL.md",
    "../.claude/skills/clickhouse-io/SKILL.md"
  ],
  "mcp": {
    "github": {
      "type": "stdio",
      "command": ["npx", "-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "enabled": false
    },
    "memory": {
      "type": "stdio",
      "command": ["npx", "-y", "@modelcontextprotocol/server-memory"],
      "enabled": false
    },
    "filesystem": {
      "type": "stdio",
      "command": ["npx", "-y", "@modelcontextprotocol/server-filesystem", "."],
      "enabled": false
    },
    "docker": {
      "type": "stdio",
      "command": ["npx", "-y", "@modelcontextprotocol/server-docker"],
      "enabled": false
    },
    "postgres": {
      "type": "stdio",
      "command": ["npx", "-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}"
      },
      "enabled": false
    },
    "context7": {
      "type": "stdio",
      "command": ["npx", "-y", "@context7/mcp-server"],
      "enabled": false
    },
    "azure-devops": {
      "type": "remote",
      "url": "https://your-azure-devops-mcp-endpoint",
      "enabled": false,
      "oauth": false,
      "headers": {
        "Authorization": "Basic {env:AZURE_DEVOPS_PAT}"
      }
    },
    "sonarqube": {
      "type": "remote",
      "url": "https://your-sonarqube.com/mcp",
      "enabled": false,
      "oauth": false,
      "headers": {
        "Authorization": "Bearer {env:SONARQUBE_TOKEN}"
      }
    },
    "clickhouse": {
      "type": "http",
      "url": "https://mcp.clickhouse.cloud/mcp",
      "enabled": false
    }
  },
  "share": "disabled",
  "autoupdate": true,
  "compaction": {
    "auto": true,
    "prune": true
  }
}
