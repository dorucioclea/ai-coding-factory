{
  "$schema": "https://opencode.ai/config.json",
  "model": "local-inference/GLM-4.7",
  "small_model": "local-inference/GLM-4.7",
  "provider": {
    "local-inference": {
      "options": {
        "apiKey": "local-inference-key",
        "baseURL": "http://localhost:8000/v1",
        "timeout": 120000
      }
    }
  },
  "permission": {
    "bash": {
      "git *": "allow",
      "dotnet *": "allow",
      "docker *": "ask",
      "rg *": "allow",
      "find *": "allow",
      "sed *": "allow",
      "mkdir *": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "npm *": "allow",
      "node *": "allow",
      "bun *": "allow",
      "cd *": "allow",
      "pwd": "allow",
      "echo *": "allow"
    },
    "edit": "ask",
    "write": "ask"
  },
  "agent": {
    "ideation": {
      "instructions": "agent/ideation-agent.md"
    },
    "prototype": {
      "instructions": "agent/prototype-agent.md"
    },
    "poc": {
      "instructions": "agent/poc-agent.md"
    },
    "pilot": {
      "instructions": "agent/pilot-agent.md"
    },
    "product": {
      "instructions": "agent/product-agent.md"
    },
    "product-owner": {
      "instructions": "agent/product-owner-agent.md"
    },
    "scrum-master": {
      "instructions": "agent/scrum-master-agent.md"
    },
    "developer": {
      "instructions": "agent/developer-agent.md"
    },
    "qa": {
      "instructions": "agent/qa-agent.md"
    },
    "security": {
      "instructions": "agent/security-agent.md"
    },
    "devops": {
      "instructions": "agent/devops-agent.md"
    }
  },
  "plugin": [],
  "instructions": [
    "prompts/common-instructions.txt",
    "skill/net-agile/SKILL.md",
    "skill/net-scrum/SKILL.md",
    "skill/net-testing/SKILL.md",
    "skill/net-docker/SKILL.md",
    "skill/net-github-actions/SKILL.md",
    "skill/net-kubernetes/SKILL.md",
    "skill/net-web-api/SKILL.md",
    "skill/net-jwt-auth/SKILL.md",
    "skill/net-repository-pattern/SKILL.md",
    "skill/net-domain-model/SKILL.md",
    "skill/net-cqrs/SKILL.md",
    "skill/net-observability/SKILL.md"
  ],
  "mcp": {
    "github": {
      "type": "remote",
      "url": "https://mcp.github.com",
      "enabled": false,
      "oauth": {}
    },
    "azure-devops": {
      "type": "remote",
      "url": "https://your-azure-devops-mcp-endpoint",
      "enabled": false,
      "oauth": false,
      "headers": {
        "Authorization": "Basic {env:AZURE_DEVOPS_PAT}"
      }
    },
    "sonarqube": {
      "type": "remote",
      "url": "https://your-sonarqube.com/mcp",
      "enabled": false,
      "oauth": false,
      "headers": {
        "Authorization": "Bearer {env:SONARQUBE_TOKEN}"
      }
    }
  },
  "share": "disabled",
  "autoupdate": true,
  "compaction": {
    "auto": true,
    "prune": true
  }
}
